CGAL_squared_distance(
    const CGAL_Line_2<R> &line,
    const CGAL_Ray_2<R> &ray)
{
    CGAL_Vector_2<R> normalvec(line.a(), line.b());
    CGAL_Vector_2<R> diff = ray.source()-line.point();
    R::FT sign_dist = diff*normalvec;
    if (sign_dist < R::FT(0)) {
