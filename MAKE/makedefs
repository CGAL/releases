
# This is the file which should be included by each makefile 
# for applications using CGAL


# Don't edit below this line.
#..........................................................................


#..........................................................................
# CGAL source files get the extension .C
#
.SUFFIXES:	.o .C

#..........................................................................
# The name to be used for the CGAL Kernel:
#
CGAL_LIBNAME =CGALkernel

#..........................................................................
# The directory where the CGAL and LEDA include trees can be found:
#
CGAL_INCL_DIR = $(CGAL_DIR)/include
LEDA_INCL_DIR = $(LEDA_DIR)/incl


#..........................................................................
# The path where the CGAL Kernel and the LEDA libraries can be found.
# Note that this depends on the OS of the machine where you compile
# and on the compiler you have chosen in the makefile.
#
CGAL_LIB_DIR = $(CGAL_DIR)/lib_$(CGAL_OSTYPE)_$(CC)

LEDA_LIB_DIR = $(LEDA_DIR)/lib_$(CGAL_OSTYPE)_$(CC)


#..........................................................................
# Inclusion of system and compiler specific make settings:
#
include $(CGAL_DIR)/MAKE/$(CGAL_OSTYPE)_$(CC)_defs



#..........................................................................
# 
settings:
	@echo ""
	@echo "You compile with the following settings:"
	@echo ""
	@echo "Compiler      = " $(CC)
	@echo "OS Type       = " $(CGAL_OSTYPE)
	@echo ""
	@echo "LEDA should be located at:"
	@echo "LEDA_INCL_DIR = " $(LEDA_INCL_DIR)
	@echo "LEDA_LIB_DIR  = " $(LEDA_LIB_DIR)
	@echo ""
	@echo "CGAL should be located at:"
	@echo "CGAL_INCL_DIR = " $(CGAL_INCL_DIR)
	@echo "CGAL_LIB_DIR  = " $(CGAL_LIB_DIR)
	@echo ""
	@echo "we provide two sets of LDFLAGS:"
	@echo "CGAL_LDFLAGS  = " $(CGAL_LDFLAGS)
	@echo ""
	@echo "CGAL_WINDOW_LDFLAGS  = " $(CGAL_WINDOW_LDFLAGS)
