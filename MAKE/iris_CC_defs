# definitions for SGI with the native C++ compiler (version 4.0).
# OS: IRIX 5.3


# the ptused flag in the following is necessary to circumvent a bug in patch
# number 556.

CGAL_CFLAGS = -ptused -DCGAL_IO -DCGAL_REPCLASS -DCGAL_CHECK_PRECONDITIONS \
	      -DCGAL_WORKAROUND_001 -DCGAL_WORKAROUND_002 \
	      -I$(CGAL_DIR)/include   -I$(LEDA_INCL_DIR)



ARPREPROCESSOR = /usr/lib/DCC/edg_prelink
ARPOSTPROCESSOR = /bin/true

AR = ar cr

CGALLIB = lib$(CGAL_LIBNAME).a



AR_SH = $(CC) -shared -o

AR_SHPREPROCESSOR = /usr/lib/DCC/edg_prelink
AR_SHPOSTPROCESSOR = /bin/true

CGALSHAREDLIB = lib$(CGAL_LIBNAME).so


