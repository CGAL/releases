CXXFLAGS = -DCGAL_USE_F2C
LDFLAGS =
LIBS = lapack f77blas cblas atlas g2c
REQUIRES =
INCOMPATIBLE = DOLLAR_WINDOWS_COMPILER
STDINCLDIRS =
INCLTHING =
STDLIBDIRS =
LIBTHING =
COMPILETESTFLAGS =

