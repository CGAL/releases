# This file contains CGAL makefile settings for the following platform:
#    operating system: Sun Solaris 2.5
#    compiler:         GNU g++ 2.7.2 (with rtti patch)
#    with LEDA

#---------------------------------------------------------------------#
#                    include directory settings
#---------------------------------------------------------------------#

CGAL_DIRECTORIES = /KM/projects/CGAL/make/CGAL_directories
include $(CGAL_DIRECTORIES)

#---------------------------------------------------------------------#
#                    os/compiler description
#---------------------------------------------------------------------#

CGAL_OS_COMPILER = sparc_SunOS-5.5.1_g++-2.7.2_rtti_LEDA

#---------------------------------------------------------------------#
#                    compiler
#---------------------------------------------------------------------#

CGAL_CXX = g++-2.7.2.3

#---------------------------------------------------------------------#
#                    compiler flags
#---------------------------------------------------------------------#
# For more information about the compiler flags see the installation guide.

CGAL_STL_VERSION = CGAL_STL_GCC
# *** Fill in your STL_include_directory ***
# (including the -I directive)
# (e.g. -I/usr/local/STL)
CGAL_STL_INCLUDE_DIRECTIVE =
LEDA_INCL_DIR = /LEDA/RTTI/incl

CGAL_CXXFLAGS = \
	-DCGAL_GNU_GCC_272 \
	-D$(CGAL_STL_VERSION) \
	-DCGAL_USE_LEDA_BOOL \
	-DCGAL_USE_LEDA_HANDLE \
	-DRTTI_PATCH \
	-frtti \
	$(CGAL_STL_INCLUDE_DIRECTIVE) \
	-I$(CGAL_INCL_DIR)/gnu \
        -I/KM/projects/CGAL/Work_in_Progress/Number_types/gmp-2.0.2 \
	-I$(CGAL_INCL_DIR) \
	-I$(LEDA_INCL_DIR)

#---------------------------------------------------------------------#
#                    linker flags
#---------------------------------------------------------------------#

# *** Fill in your LEDA_lib_directory ***
LEDA_LIB_DIR = /LEDA/RTTI/solaris/g++

# *** Fill in your g++_rttipatch_directory ***
GCC_RTTI_PATCH_DIR = /KM/projects/CGAL/Work_in_Progress/Compiler_specific/g++/RTTI

CGAL_LDFLAGS = \
       -L$(CGAL_LIB_DIR)/$(CGAL_OS_COMPILER) -L$(LEDA_LIB_DIR) -L$(GCC_RTTI_PATCH_DIR) \
       -R $(CGAL_LIB_DIR)/$(CGAL_OS_COMPILER):$(LEDA_LIB_DIR):$(GCC_RTTI_PATCH_DIR) \
       -lCGAL -lL -lgmp \
       -nodefaultlibs -lstdc++ -liberty -lg++ -lgcc -lc -lm

CGAL_WINDOW_LDFLAGS = \
       -L$(CGAL_LIB_DIR)/$(CGAL_OS_COMPILER) -L$(LEDA_LIB_DIR) -L$(GCC_RTTI_PATCH_DIR) -L/usr/lib/X11 \
       -R $(CGAL_LIB_DIR)/$(CGAL_OS_COMPILER):$(LEDA_LIB_DIR):$(GCC_RTTI_PATCH_DIR):/usr/lib/X11 \
       -lW -lP -lG -lX11 -lCGAL -lL -lgmp \
       -nodefaultlibs -lstdc++ -liberty -lg++ -lgcc -lc -lm \
       -lsocket -lthread

#---------------------------------------------------------------------#
#                    commands and flags for creating libraries
#---------------------------------------------------------------------#

CGAL_LIB = libCGAL.a
CGAL_LIB_CXXFLAGS = $(CGAL_CXXFLAGS) 
CGAL_LIB_LDFLAGS = 
CGAL_LIB_CREATE = ar cr

CGAL_SHARED_LIB = libCGAL.so
CGAL_SHARED_LIB_CXXFLAGS = $(CGAL_CXXFLAGS) -fpic
CGAL_SHARED_LIB_LDFLAGS = -L$(LEDA_LIB_DIR) -R $(LEDA_LIB_DIR) -lL 
CGAL_SHARED_LIB_CREATE = g++ -G -o

